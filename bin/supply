#!/bin/bash
set -euo pipefail

BUILD_DIR=$1
CACHE_DIR=$2
DEPS_DIR=$3
DEPS_IDX=$4

export BUILDPACK_DIR=`dirname $(readlink -f ${BASH_SOURCE%/*})`

echo "-----> Telegraf Sidecar-Buildpack version $(cat "$BUILDPACK_DIR/VERSION")"
echo "-----> Running telegraf sidecar supply"

/bin/bash $BUILDPACK_DIR/scripts/install_jq.sh $DEPS_DIR $DEPS_IDX
/bin/bash $BUILDPACK_DIR/scripts/install_module.sh $DEPS_DIR $DEPS_IDX
/bin/bash $BUILDPACK_DIR/scripts/configure_telegraf.sh $DEPS_DIR $DEPS_IDX
/bin/bash $BUILDPACK_DIR/scripts/create_configfile.sh $DEPS_DIR $DEPS_IDX
/bin/bash $BUILDPACK_DIR/scripts/create_launchfile.sh $DEPS_DIR $DEPS_IDX